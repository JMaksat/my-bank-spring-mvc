<nav class="navbar navbar-default navbar-static-top alcdesk-header" role="navigation">

    <div class="navbar-header">
        <a class="navbar-brand"  href="$request.contextPath/home" style="margin-left:10%"><big>AlcDesk</big></a>
    </div>
