<!DOCTYPE html>
<html lang="en">
    #parse("WEB-INF/pages/header.vm")

<body>
<input type="hidden" name="$!{_csrf.parameterName}" value="$!{_csrf.token}">
    #parse("WEB-INF/pages/topmenu.vm")

<div class="container-fluid">
    <div class="row">
        #parse("WEB-INF/pages/leftmenu.vm")

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

            <h1 class="page-header">$pageName</h1>

            <h2 class="sub-header">
                <a class="btn btn-success" href="" role="button">New parameter</a>
            </h2>

            <div class="table-responsive">
                <table id="datatab" class="display" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Parent ID</th>
                        <th>Name</th>
                        <th>Value</th>
                        <th>Active from</th>
                        <th>Active to</th>
                        <th>Date of creation</th>
                        <th>Last edited date</th>
                        <th>Last edited by</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Parent ID</th>
                        <th>Name</th>
                        <th>Value</th>
                        <th>Active from</th>
                        <th>Active to</th>
                        <th>Date of creation</th>
                        <th>Last edited date</th>
                        <th>Last edited by</th>
                    </tr>
                    </tfoot>
                    <tbody>
                        #foreach($lines in $params)
                        <tr>
                            <td>$!lines.parameterId</td>
                            <td>$!lines.parentId</td>
                            <td>$!lines.parameterName</td>
                            <td>$!lines.value</td>
                            <td>$!dateTool.format("dd.MM.yyyy", $!lines.activeFrom)</td>
                            <td>$!dateTool.format("dd.MM.yyyy", $!lines.activeTo)</td>
                            <td>$!dateTool.format("dd.MM.yyyy", $!lines.dateCreated)</td>
                            <td>$!dateTool.format("dd.MM.yyyy", $!lines.dateModified)</td>
                            <td>$!lines.userID</td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" class="init">

    $(document).ready(function() {
        $('#datatab').DataTable();
    } );

</script>

</body>
</html>
